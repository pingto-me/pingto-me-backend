{
  "name": "test",
  "version": "0.0.1",
  "description": "test",
  "author": "Todsaporn Sangboon<nolifelover@gmail.com>",
  "license": "MIT",
  "keywords": [
    "nestjs",
    "typescript",
    "firebase"
  ],
  "private": true,
  "main": "dist/main.js",
  "engines": {
    "node": "18"
  },
  "scripts": {
    "db:restart:mongo": "docker compose rm -s -f -v && docker compose up -d",
    "prebuild": "rimraf dist",
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "trydev": "NEST_PORT=3008 nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "docker:migrate": "docker-compose -f docker-compose.migrate.yml up -d",
    "docker:db": "docker-compose -f docker-compose.db.yml up -d",
    "docker:seed": "docker exec -it nest-api npm run seed",
    "docker": "docker-compose up -d",
    "docker:build": "docker-compose build",
    "firebase:index": "firebase deploy --only firestore:indexes"
  },
  "dependencies": {
    "@nestjs/common": "9.3.10",
    "@nestjs/config": "^2.3.1",
    "@nestjs/core": "9.3.10",
    "@nestjs/graphql": "11.0.0",
    "@nestjs/jwt": "10.0.2",
    "@nestjs/passport": "9.0.3",
    "@nestjs/platform-express": "9.3.10",
    "@nestjs/swagger": "6.2.1",
    "@pushprotocol/restapi": "^1.7.29",
    "@ton/core": "^0.59.0",
    "@ton/crypto": "^3.3.0",
    "@ton/ton": "^15.1.0",
    "bcrypt": "^5.1.1",
    "class-transformer": "0.5.1",
    "class-validator": "^0.14.0",
    "ethereumjs-util": "^7.1.5",
    "ethers": "5",
    "firebase": "^10.5.0",
    "firebase-admin": "^11.11.0",
    "graphql": "^16.8.1",
    "passport": "0.6.0",
    "passport-jwt": "4.0.1",
    "reflect-metadata": "0.1.13",
    "request": "^2.88.2",
    "rimraf": "4.4.0",
    "rxjs": "7.8.0",
    "typesaurus": "^10.1.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.5.0",
    "@nestjs/testing": "9.3.10",
    "@types/bcrypt": "5.0.0",
    "@types/chance": "1.1.3",
    "@types/express": "4.17.17",
    "@types/node": "^18.15.0",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "^5.54.1",
    "@typescript-eslint/parser": "^5.54.1",
    "chance": "1.1.11",
    "eslint": "^8.36.0",
    "eslint-config-prettier": "^8.7.0",
    "eslint-plugin-prettier": "^4.2.1",
    "jest": "29.5.0",
    "prettier": "^2.8.4",
    "supertest": "6.3.3",
    "ts-jest": "29.0.5",
    "ts-loader": "9.4.2",
    "ts-morph": "^17.0.1",
    "ts-node": "10.9.1",
    "tsconfig-paths": "4.1.2",
    "typescript": "4.9.5"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "moduleNameMapper": {
      "^src/(.*)$": "<rootDir>/src/$1"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
